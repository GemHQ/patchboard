            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "template": {
            "type": "string"
          },
          "query": {
            "properties": {
              "type": {
                "enum": [
                  "string",
                  "number",
                  "integer",
                  "boolean"
                ]
              }
            }
          }
        }
      }
    },
